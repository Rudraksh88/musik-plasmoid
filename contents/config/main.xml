<?xml version="1.0" encoding="UTF-8"?>
<kcfg xmlns="http://www.kde.org/standards/kcfg/1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.kde.org/standards/kcfg/1.0 http://www.kde.org/standards/kcfg/1.0/kcfg.xsd">
    <kcfgfile name=""/>

    <group name="General">
        <entry name="accentedSongName" type="Bool">
            <default>false</default>
        </entry>
        <entry name="accentedArtistName" type="Bool">
            <default>true</default>
        </entry>
        <entry name="accentedButtons" type="Bool">
            <default>true</default>
        </entry>
        <entry name="accentedProgressBar" type="Bool">
            <default>false</default>
        </entry>
        <entry name="progressBarAccentOnHover" type="Bool">
            <default>true</default>
        </entry>
        <entry name="useCustomColor" type="Bool">
            <default>false</default>
        </entry>

        <!-- Font settings - Mini Player -->
        <entry name="miniPlayerSongNameUseCustomFont" type="Bool">
            <default>false</default>
        </entry>
        <entry name="miniPlayerSongNameFont" type="Font">
            <default></default>
        </entry>
        <entry name="miniPlayerSongNameSpacing" type="Double">
            <default>0.00</default>
        </entry>
        <entry name="miniPlayerSongNameCapitalize" type="Bool">
            <default>false</default>
        </entry>

        <entry name="miniPlayerArtistNameUseCustomFont" type="Bool">
            <default>false</default>
        </entry>
        <entry name="miniPlayerArtistNameFont" type="Font">
            <default></default>
        </entry>
        <entry name="miniPlayerArtistNameSpacing" type="Double">
            <default>0.00</default>
        </entry>
        <entry name="miniPlayerArtistNameCapitalize" type="Bool">
            <default>false</default>
        </entry>

        <!-- Font settings - Full Player -->
        <entry name="fullPlayerSongNameUseCustomFont" type="Bool">
            <default>false</default>
        </entry>
        <entry name="fullPlayerSongNameFont" type="Font">
            <default></default>
        </entry>
        <entry name="fullPlayerSongNameSpacing" type="Double">
            <default>0.00</default>
        </entry>
        <entry name="fullPlayerSongNameCapitalize" type="Bool">
            <default>false</default>
        </entry>

        <entry name="fullPlayerArtistNameUseCustomFont" type="Bool">
            <default>false</default>
        </entry>
        <entry name="fullPlayerArtistNameFont" type="Font">
            <default></default>
        </entry>
        <entry name="fullPlayerArtistNameSpacing" type="Double">
            <default>0.00</default>
        </entry>
        <entry name="fullPlayerArtistNameCapitalize" type="Bool">
            <default>true</default>
        </entry>

        <entry name="timerUseCustomFont" type="Bool">
            <default>false</default>
        </entry>
        <entry name="timerFont" type="Font">
            <default></default>
        </entry>
        <entry name="timerSpacing" type="Double">
            <default>0.00</default>
        </entry>
        <entry name="timerCapitalize" type="Bool">
            <default>false</default>
        </entry>

        <!-- Margin settings -->
        <entry name="beforeAlbumCover" type="Int">
            <default>0</default>
        </entry>
        <entry name="beforeSongName" type="Int"> <!-- Before text block -->
            <default>0</default>
        </entry>
        <entry name="afterSongName" type="Int"> <!-- Middle of text block -->
            <default>0</default>
        </entry>
        <entry name="afterArtistName" type="Int"> <!-- After of text block -->
            <default>0</default>
        </entry>
        <entry name="beforePlayerControls" type="Int"> <!-- Before player controls -->
            <default>0</default>
        </entry>
        <entry name="afterPlayerControls" type="Int"> <!-- After player controls -->
            <default>0</default>
        </entry>


        <entry name="panelIcon" type="string">
            <default>view-media-track</default>
        </entry>
        <entry name="useAlbumCoverAsPanelIcon" type="Bool">
            <default>false</default>
        </entry>
        <entry name="albumCoverRadius" type="Int">
            <default>8</default>
        </entry>
        <entry name="sourceIndex" type="string">
            <default>0</default>
        </entry>
        <entry name="sources" type="StringList">
            <default>any,spotify,vlc</default>
        </entry>
        <entry name="maxSongWidthInPanel" type="string">
            <default>200</default>
        </entry>
        <entry name="commandsInPanel" type="Bool">
            <default>true</default>
        </entry>
        <entry name="textScrollingSpeed" type="Int">
            <default>3</default>
        </entry>
        <entry name="separateText" type="bool">
            <default>false</default>
        </entry>
        <entry name="textScrollingBehaviour" type="int">
            <default>0</default>
        </entry>
        <entry name="useCustomFont" type="Bool">
            <default>false</default>
        </entry>
        <entry name="customFont" type="Font">
            <default></default>
        </entry>
    </group>
</kcfg>
